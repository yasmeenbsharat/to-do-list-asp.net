@{
}
<div class="alert-primary row"> 
    
   <div  class="col-md-4">
        <form asp-action="Create" method="post" class=" my-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mb-2">
            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
            <input asp-for="Title" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
            </div>
          
        </div>
        
            <div class="form-group row mb-2">
                <label asp-for="Details" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Details" class="form-control"> </textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
            </div>
          

            <div class="form-group row mb-2">
                <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Date" class="form-control">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

            </div>
         


            <div class="form-group row mb-2 form-check">
                <div class="col-sm-10 ">
                    <input asp-for="isActive" class="form-control   form-check-input">
                    <span asp-validation-for="isActive" class="text-danger"></span>
                </div>
                <label asp-for="isActive" class="col-sm-2 col-form-label form-check-label"></label>
               

            </div>
           
            <input type="submit" value="Create" class="btn btn-success">
    </form>
    </div>

</div>
 @section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }